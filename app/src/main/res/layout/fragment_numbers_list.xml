<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/numbers_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/insertion_button"
        android:layout_alignParentTop="true"
        tools:context="com.megamott.notes.view.fragments.NumbersListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/number_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:id="@+id/insertion_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/add_new_note"
        android:textColor="@color/white"
        android:textSize="@dimen/settings_name_size"
        android:backgroundTint="@color/colorPrimary"/>


</RelativeLayout>